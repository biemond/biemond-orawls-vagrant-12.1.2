# python script wls:wlscontrol

wlsUser    = '<%= @weblogic_user %>'
password   = sys.argv[1] 
machine    = '<%= @adminserver_address %>'
portNumber = '<%= @nodemanager_port %>'

domain     = '<%= @domain_name %>'
domainPath = '<%= @domain_dir %>'
wlsServer  = '<%= @server %>'

nmConnect(wlsUser,password,machine,portNumber,domain,domainPath,'ssl')

#start the WlsServer
nmStart(wlsServer)

#Ask the status of the WlsServer
nmServerStatus(wlsServer)

#disconnect from the nodemanager
nmDisconnect()
