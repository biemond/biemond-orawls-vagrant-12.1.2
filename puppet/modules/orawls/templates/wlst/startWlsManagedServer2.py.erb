# python script wls:wlscontrol

wlsUser    = '<%= @weblogic_user %>'
password   = sys.argv[1] 
machine    = '<%= @adminserver_address %>'
portNumber = '<%= @adminserver_port %>'

wlsServer  = '<%= @server %>'
wlsTarget  = '<%= @target %>'

connect(wlsUser,password,'t3://'+machine+':'+portNumber)

#start the WlsServer
start(wlsServer,wlsTarget)
